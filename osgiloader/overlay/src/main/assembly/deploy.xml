<?xml version="1.0"?>
<assembly>
  <id>kernel-loader</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/configuration</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>server/lib/</outputDirectory>
      <includes>
        <include>org.sakaiproject.kernel2:osgi-server</include>
      </includes>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>common/lib/</outputDirectory>
      <includes>
        <include>org.sakaiproject.kernel2:osgi-common</include>
      </includes>
      <unpack>false</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>shared/lib/</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <excludes>
        <exclude>log4j:log4j</exclude>
        <exclude>commons-logging:commons-logging</exclude>
        <exclude>org.sakaiproject.kernel2:osgi-common</exclude>
        <exclude>org.sakaiproject.kernel2:osgi-server</exclude>
      </excludes>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
